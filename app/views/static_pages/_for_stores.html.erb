<% provide(:title, 'For stores') %>
<div style="background: #ffffff;" id="delivery_for_stores" name="delivery_for_stores">
  <div class="container">
    <div class="row">
      </br>
      <h4 class="line-divider" style="text-align: center"><%= (t 'menu.for_stores') %></h4>

      <div class="col-md-7 text-justify">
        <%= (t 'content.for_stores_1').html_safe %>
        <h4 style="text-align: center;"><%= (t 'content.for_stores_2') %></h4>
        <ul style="text-align: justify;">
          <%= (t 'content.for_stores_3').html_safe %>
        </ul>
      </div>
      <div class="col-md-5" style="padding-top: 5%">
        <img alt="" src="/assets/imac_.png" style="width: 429px; height: 355px; z-index: 999;">
        <div style="width: 398px; height: 225px; margin-top: -340px;
                margin-left: 15px;">
          <div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item">
                <% if I18n.locale == :ru %>
                    <%= image_tag("new_inquiry_ru.png") %>
                    <% else %>
                    <%= image_tag("new_inquiry_en.png") %>
                    <% end %>
                <div class="carousel-caption">
                  <p><%= (t 'content.for_stores_slider_1') %></p>
                </div>
              </div>
              <div class="item">
                <% if I18n.locale == :ru %>
                    <%= image_tag("delivery_for_store_ru.png") %>
                <% else %>
                    <%= image_tag("delivery_for_store_en.png") %>
                <% end %>
                <div class="carousel-caption">
                  <p><%= (t 'content.for_stores_slider_2') %></p>
                </div>
              </div>
              <div class="item">
                <% if I18n.locale == :ru %>
                    <%= image_tag("show_inquiry_ru.png") %>
                <% else %>
                    <%= image_tag("show_inquiry_en.png") %>
                <% end %>

                <div class="carousel-caption">
                  <p><%= (t 'content.for_stores_slider_3') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>



    </div>
  </div>
  </br>
</div>